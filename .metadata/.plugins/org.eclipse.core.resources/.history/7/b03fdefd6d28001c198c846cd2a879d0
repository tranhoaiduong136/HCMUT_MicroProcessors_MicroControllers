#include "main.h"
#include "Timer_Interrupt.h"

int timer0_counter = 0;
int timer0_flag = 0;

void setTimer0(int duration){
	timer0_counter = duration / TIMER_CYCLE;
	timer0_flag = 0;
}

void timerDELAY_run(void){
	if(timer0_counter > 0){
		timer0_counter--;
		if(timer0_counter == 0){
			HAL_GPIO_TogglePin ( LED_RED_GPIO_Port , LED_RED_Pin );
			setTimer0(200);
		}
	}
}

